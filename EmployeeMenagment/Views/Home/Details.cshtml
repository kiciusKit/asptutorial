@model HomeDetailsViewModel

@{
    //Layout = null;
    ViewBag.Title = "Emploee Details";
}

<div class="row justify-content-center m3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img src="~/images/user.jpg" class="card-img-top" />

                <h4>Emoloyee Id: @Model.employee.Id</h4>
                <h4>Emoloyee Email: @Model.employee.Email</h4>
                <h4>Emoloyee Department: @Model.employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>

        </div>
    </div>
</div>
@section Scripts{ 
    <script src="~/js/CustomScript.js"></script>
}