@model HomeDetailsViewModel

@{
    //Layout = null;
    ViewBag.Title = "Emploee Details";
    var photoPath = "~/images/" + (Model.Employee.PhotoPath ?? "user.jpg");
}

<div class="row justify-content-center m3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img src="@photoPath" class="card-img-top" asp-append-version="true"/>

                <h4>Emoloyee Id: @Model.Employee.Id</h4>
                <h4>Emoloyee Email: @Model.Employee.Email</h4>
                <h4>Emoloyee Department: @Model.Employee.Department</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">back</a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@Model.Employee.Id" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>

        </div>
    </div>
</div>
@section Scripts{ 
    <script src="~/js/CustomScript.js"></script>
}